@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
        <div class="col-md-8 offset-2">
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-success">
                            <p class="card-title">
                                <h5 class="card-title">
                                    @Model.Name
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.ImageURL" width="100%" height="90%" alt="@Model.Name" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text text-white badge bg-secondary">@Model.ProductCategory</p>
                            <p class="card-text"><b>Description: </b>@Model.Description</p>
                            <p class="card-text"><b>Price: </b>@Model.Price.ToString("c")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-secondary float-right" asp-action="Index"><i class="bi bi-arrow-left-short"></i> Back to Home</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> ADD TO CART</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

